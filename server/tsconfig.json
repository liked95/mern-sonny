{
  "compilerOptions": {
    "target": "ES6",                      // Target modern JavaScript
    "module": "NodeNext",                 // Node.js-style module resolution
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,              // Compatibility with CommonJS modules
    "allowImportingTsExtensions": true,   // Allow explicit ".ts" in imports
    "resolveJsonModule": true,            // Enable importing JSON files
    "noEmit": true                        // Prevent TypeScript from generating JS
  },
  "ts-node": {
    "esm": true                           // Enable ESM behavior
  },
  "include": ["src/**/*.ts", "src/types/**/*.d.ts"]
}
